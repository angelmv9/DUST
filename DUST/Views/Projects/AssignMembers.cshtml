@model DUST.Models.ViewModels.ProjectMembersViewModel

<div class="container">
    <h2>Assign Members for</h2>
    <div class="row">
        <div class="col-md-6">
            <h3>@Model.Project.Name</h3>
            <div class="card">
                <div class="card-header">
                    <label asp-for="@Model.Users" class="control-label">Assign Team Members for Projects</label>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AssignMembers">
                        <input type="hidden" asp-for="Project.Id" />
                        <div class="col-12 mb-3">
                            <div class="form-group">
                                <select required asp-for="@Model.SelectedUsersIds" asp-items="@Model.Users" class="form-control" multiple="multiple"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-10">
                                <input type="submit" class="btn btn-primary" value="Assign Users" />
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <div>
        <a asp-action="Details" asp-route-id="@Model.Project.Id">Back to Details</a>
    </div>
</div>